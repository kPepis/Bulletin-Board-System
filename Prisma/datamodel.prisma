type User {
  id: ID! @id
  userName: String! @unique
  password: String!
  posts: [Post!]! @relation(name: "UserPosts", link: INLINE, onDelete: CASCADE)
  permissions: [Permission]
}

type Board {
  id: ID! @id
  name: String! @unique
  description: String!
  posts: [Post!]! @relation(name: "BoardPosts", link: INLINE)
  usersOnline: [User!]! @relation(name: "UsersBrowsingBoard", link: INLINE)
  createdBy: User! @relation(name: "BoardCreator", link: INLINE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Post {
  id: ID! @id
  author: User! @relation(name: "UserPosts")
  title: String!
  content: String!
  image: String!
  board: Board! @relation(name: "BoardPosts")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

enum Permission {
  ADMIN
  USER
  BOARDUPDATE
  BOARDDELETE
  POSTUPDATE
  POSTDELETE
  PERMISSIONUPDATE
}
